# OTP Service Configuration
# Choose your preferred OTP service: 'twilio', 'messagecentral', 'otpless', or 'mock'
OTP_SERVICE=mock

# Twilio Configuration (https://www.twilio.com/)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Message Central Configuration (https://www.messagecentral.com/)
MESSAGE_CENTRAL_API_KEY=your_message_central_api_key
MESSAGE_CENTRAL_CUSTOMER_ID=your_customer_id
MESSAGE_CENTRAL_COUNTRY_CODE=91

# OTPless Configuration (https://otpless.com/)
OTPLESS_API_KEY=your_otpless_api_key
OTPLESS_CLIENT_ID=your_otpless_client_id
OTPLESS_CLIENT_SECRET=your_otpless_client_secret

# WhatsApp Configuration (for services that support it)
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id

# App Configuration
REACT_APP_OTP_SERVICE=mock
REACT_APP_API_BASE_URL=http://localhost:3001